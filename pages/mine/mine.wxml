<!-- userProfile.wxml -->
<view class="container">
  <view class="userinfo">
    <text class="userinfo-title">用户信息</text>
    <view class="userinfo-item">
      <text class="userinfo-label">手机号：</text>
      <text class="userinfo-value">{{userInfo.uid}}</text>
    </view>
    <view class="userinfo-item">
      <text class="userinfo-label">用户名：</text>
      <text class="userinfo-value">{{userInfo.username}}</text>
    </view>
    <view class="userinfo-item">
      <text class="userinfo-label">邮箱：</text>
      <text class="userinfo-value">{{userInfo.email}}</text>
    </view>
  </view>
</view>
