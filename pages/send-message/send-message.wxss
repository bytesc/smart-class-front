/* pages/send-message/send-message.wxss */

.message-list-top-bar{
  height: 120px;
  background-color: #04BE02;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.message-list-top-bar-text{
  padding-bottom: 20px;
  color: black;
  font-size: large;
  font-weight: 600;
}
.message-list-top-bar-num{
  color: black;
}

.send-message-container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.class-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.message-form {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-group {
  margin-bottom: 30rpx;
}

.message-input {
  width: 100%;
  min-height: 300rpx;
  padding: 20rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 8rpx;
  font-size: 32rpx;
  background-color: #fafafa;
}

.submit-btn {
  background-color: #07c160;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  line-height: 88rpx;
}

.btn-hover {
  background-color: #06ad56;
}
