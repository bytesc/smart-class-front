/* pages/announcement-list/announcement-list.wxss */

.announcement-list-top-bar{
  height: 120px;
  background-color: #d4237a;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.announcement-list-top-bar-text{
  padding-bottom: 20px;
  color: black;
  font-size: large;
  font-weight: 600;
}
.announcement-list-top-bar-num{
  color: black;
}


.announcement-item {
  border-bottom: 3px solid #eee;
}

.announcement-item:hover{
  background-color: #f8f8f8;
}

.announcement-header {
  background-color: #e8e8e8;
  padding: 15px;
  padding-bottom: 10px;
}

.announcement-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.announcement-meta {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  color: #666;
}

.announcement-time {
  margin-right: 10px;
}

.announcement-content {
  padding: 15px;
  font-size: 16px;
  line-height: 1.6;
  color: #333;
}


.publish-btn {
  position: absolute;
  right: 20px;
  top: 20px;
}

.publish-btn navigator {
  background-color: #fff;
  color: #d4237a;
  padding: 6px 12px;
  border-radius: 15px;
  font-size: 14px;
  font-weight: bold;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
}

.publish-btn navigator:active {
  background-color: #f0f0f0;
  transform: scale(0.98);
}
