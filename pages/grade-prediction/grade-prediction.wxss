.prediction-top-bar{
  height: 160px;
  background-color: #cdcdcd;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.prediction-top-bar-text{
  padding-bottom: 20px;
  color: black;
  font-size: large;
  font-weight: 600;
}

.lesson-picker {
  background-color: #04BE02; /* 按钮颜色 */
  color: black; /* 文本颜色 */
  padding: 16px 24px; /* 内边距 */
  border-radius: 4px; /* 圆角边框 */
  font-size: 16px; /* 文本大小 */
}
.picker {
  width: 100%;
  text-align: center;
}

