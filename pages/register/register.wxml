<!--pages/register/register.wxml-->
<!-- <text>pages/register/register.wxml</text> -->

<view class="container">

  <view class="title-container">
    <image class="title-image" src="/static/images/logo.jpg"></image>
    <text class="title-text">智慧班级</text>
  </view>

  <form bindsubmit="onRegisterForm" class="registerForm">
    <view class="input-group">
      <text class="label">手机号：</text>
      <input name="uid" type="number" placeholder="请输入手机号" />
    </view>
    <view class="input-group">
      <text class="label">姓名：</text>
      <input name="username" type="text" placeholder="请输入姓名" />
    </view>
    <view class="input-group">
      <text class="label">邮箱：</text>
      <input name="email" type="email" placeholder="请输入邮箱" />
    </view>
    <view class="input-group">
      <text class="label">密码：</text>
      <input name="password" type="password" placeholder="请输入密码" />
    </view>
    <view class="input-group">
      <text class="label">重复密码：</text>
      <input name="confirmPassword" type="password" placeholder="请重复密码" />
    </view>
    <button formType="submit">注册</button>
  </form>
</view>