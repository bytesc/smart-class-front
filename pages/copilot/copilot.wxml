  <view class="chat-log">
    <block wx:for="{{chatHistory}}" wx:key="index">
      <view class="chat-message">
        <text class="chat-user">用户：{{item.question}}</text>
        <text class="chat-agent">AI助手：{{item.answer}}</text>
      </view>
    </block>
  </view>
  
  <view class="question-area">
    <input type="text" placeholder="请输入你的问题" bindinput="bindInput" value="{{question}}"/>
    <button bindtap="askAgent">提问</button>
  </view>

</view>
