/* pages/copilot/copilot.wxss */

.container {
  padding: 20rpx;
}

.userinfo {
  margin-bottom: 20rpx;
}

.question-area {
  margin-bottom: 20rpx;
}

input {
  border: 1rpx solid #ddd;
  padding: 10rpx;
  margin-right: 20rpx;
}

button {
  background-color: #007aff;
  color: #fff;
}

.answer-area {
  margin-top: 20rpx;
  background-color: #f5f5f5;
  padding: 20rpx;
  border-radius: 10rpx;
}

.chat-message {
  display: flex;
  flex-direction: column;
  margin-bottom: 10px;
}

.chat-user {
  color: blue;
}

.chat-agent {
  color: green;
}